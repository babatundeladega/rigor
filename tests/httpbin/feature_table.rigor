name: Feature Tables and HTML with Beautiful Soup
format: "1.0"
host: https://en.wikipedia.org/wiki

scenarios: |
  | name                    | reference               |
  | Ada Lovelace            | Ada_Lovelace            |
  | Betty Holberton         | Betty_Holberton         |
  | Dorothy Vaughan         | Dorothy_Vaughan         |
  | Frances E. Allen        | Frances_E._Allen        |
  | Grace Hopper            | Grace_Hopper            |
  | Jean E. Sammet          | Jean_E._Sammet          |
  | Katherine Johnson       | Katherine_Johnson       |
  | Mary Jackson (engineer) | Mary_Jackson_(engineer) |

steps:

  - description: Request Wikipedia page via reference URL and check title

    request:
        path: '{reference}'

    validate:

      - expect: '{scenario.name} - Wikipedia'
        actual: '{response.html.title.string}'
