name: Get
format: "1.0"
domain: https://httpbin.org
tags:
  - working

steps:

  - description: Get call with no parameters

    request:
        path: /get

    validate:
      - expect: {}
        actual: '{response.args}'
      - expect: "*/*"
        actual: '{response.headers.Accept}'
      - expect: close
        actual: '{response.headers.Connection}'
      - expect: https://httpbin.org/get
        actual: '{response.url}'
